<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Display Grounds</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet"  />
  </head>

  <body>
    <div id="nav_bar">
      <p>
        <%= link_to "Home", root_path, class: "homepage" %>
        > Grounds in 
        
        

      </p>
    </div>
    <div class="form-inline">
      <%= search_form_for @q do |f| %>
      <div class="form-group">
        <%= f.label :club_city_cont, "City: ", { :class => 'control-label'} %>
        <div class="input">
          <%= f.collection_select :club_city_cont,  Club.select(:city).distinct, :city, :city, {:include_blank => 'None'} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :sport_sport_cont, "Sport: ",  { :class => 'control-label'} %>
        <div class="input">
          <%= f.collection_select :sport_sport_cont, Sport.select(:sport).distinct, :sport, :sport, {:include_blank => 'None'} %>
        </div>
      </div>
      <div class="form-group"> 
      <%= f.submit class: 'btn btn-default' %>
      </div>
    <% end %>
    </div>
    
    <div id="Heading">
      Grounds in
    </div>

    <div class="container">
    <% @listings.each do |listing| %>
    <div class="row">
    <div class="col-md-12">
    <div class="col-sm-6 col-md-7">
      <div id="display_grounds">
      <ul>
        <li id="ground_name"><strong><a href="">
          <%= link_to listing.club.club, clubs_path(@club) %>
        </a></strong></li>
        <li id="address">Location : <%= listing.club.location %></li>
        <li id="phone">Contact : <%= listing.club.phone %></li>
        <li id="mail">Email : <%= listing.club.email %></li>
        <li id="sport">Sports Available : <%= listing.club.sports.pluck(:sport).flatten.join(", ")%> </li>
        <li>
          <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span></button>
            <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span></button>
            <button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
          </div>
          <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Reviews</button>
        </li>
      </ul>
               
      </div>
    </div>
    <div class="col-sm-6 col-md-3">
      <div id="myCarousel" class="carousel slide" data-interval="5000">
        <ol class="carousel-indicators middle">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="item active">
            <img src="assets/stadium1.jpeg" />
          </div>
          <div class="item">
            <img src="assets/stadium_cri1.jpeg" />
          </div>
          <div class="item">
            <img src="assets/stadium_hoc1.jpeg" />
          </div>
        </div>

        <!-- Controls -->
        <a class="carousel-control left" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>

        </a>

      </div>
    </div>


    </div>
    </div>
    <% end %>
    </div>
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>


<script type="text/javascript">
    $(document).ready(function(){
        $('.carousel').carousel()
    });
</script>
</body>
</html>