<h1>Listing clubs</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Club</th>
      <th>Location</th>
      <th>Address</th>
      <th>Description</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.city %></td>
        <td><%= club.club %></td>
        <td><%= club.location %></td>
        <td><%= club.address %></td>
        <td><%= club.description %></td>
        <td><%= club.email %></td>
        <td><%= club.phone %></td>
        <td><%= link_to 'Show', club %></td>
        <td><%= link_to 'Edit', edit_club_path(club) %></td>
        <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

